<form class="form-signin" ($submit)="handleSubmit(%event, email, password)" novalidate>
  <h2 class="form-signin-heading">Reset Your Password</h2>

  <p>Create a new password for your account.</p>

  <div class="form-group">
    <label for="inputPassword">New Password</label>
    <span class="show-password icon icon-eye{{^if passwordVisible}}-blocked{{/if}} pull-right"
          ($click)="togglePassword()"></span>
    <input type="{{#if passwordVisible}}text{{else}}password{{/if}}" class="form-control" id="inputPassword"
           aria-describedby="passwordHelp" placeholder="Enter password"
           ($keyup)="updatePassword(%element)" required>

    <password-strength {password}="password" />
    <validation-message {message}="passwordError" />
  </div>

  <button class="btn btn-lg btn-primary btn-block" type="submit">SAVE & LOG IN</button>

</form>