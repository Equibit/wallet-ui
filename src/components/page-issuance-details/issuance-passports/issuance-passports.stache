<can-import from="~/utils/stache-helpers/"></can-import>
<can-import from="bootstrap-canjs" />

<h2 class="subtitle">
  Accepted Trading Passports
  <span class="badge">{{passports.length}}</span>
</h2>

<div class="well">
    <ul class="list-unstyled passport-list">
    {{#each visiblePassports}}
      <li><a href="#">{{name}} <span class="icon icon-link-external"></span></a></li>
    {{/each}}

    {{#if is-gt(passports.length, 8)}}
      <li><button ($click)="showModal()" class="btn btn-default btn-xs">View All</button></li>
    {{/if}}
    </ul>
</div>

{{#if isModalShown}}
  <bootstrap-modal-content class="issuance-passports">
    <div class="modal-header">
      <button ($click)="close()" type="button" class="close" aria-label="Close"><span class="icon icon-cross rotate-90"></span></button>
      <h4 class="modal-title">
        Accepted Trading Passports <br>
      </h4>
    </div>
    <div class="modal-body">
      <div class="description">This issuance is restricted and requires at least one of these passports.</div>
      <div class="well">
        <ul class="list-unstyled passport-list">
          {{#each passports}}
            <li ><a href="#">{{name}} <span class="icon icon-link-external"></span></a></li>
          {{/each}}
        </ul>
      </div>
    </div>
  </bootstrap-modal-content>
{{/if}}