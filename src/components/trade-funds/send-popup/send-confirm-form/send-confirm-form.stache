<can-import from="~/utils/stache-helpers/" />
<can-import from="bootstrap/dist/js/bootstrap" />


<div class="list-group">
  <div class="list-group-item">
    <div class="form-group to-address">
      <label class="">{{i18n('to')}}</label>
      <p class="input-value break-word"><strong>{{formData.toAddress}}</strong></p>
    </div>

    {{#is formData.type 'SECURITIES'}}
      <label for="">{{i18n('securities')}}</label>
      <div class="row">
        <div class="col-xs-12 col-sm-5 display-row no-padding-left">
          <span class="input-value">{{formData.issuance.companyName}}</span>
          <span class="input-value">, {{formData.issuance.issuanceName}}</span>
        </div>

        <div class="col-xs-6 col-sm-4 form-values no-padding-left">
          <span>{{formData.amount}} {{i18n('securities')}}</span>
        </div>

        <div class="col-xs-6 col-sm-3 form-values">
          <span>$ {{formData.price}} {{i18n('usd')}}</span>
        </div>
      </div>

    {{else}}

      <label for="">{{i18n('funds')}}</label>
      <div class="row">
        <div class="col-xs-12 col-sm-5 display-row no-padding-left">
          <span>
            {{#is formData.fundsType 'EQB'}}{{i18n('equibit')}}{{else}}{{i18n('bitcoin')}}{{/is}}
          </span>
        </div>
        <div class="col-xs-6 col-sm-4 form-values no-padding-left">
          <span>{{formData.amount}} {{#is formData.fundsType 'EQB'}}{{i18n('blankEQB')}}{{else}}{{i18n('BTC')}}{{/is}}</span>
        </div>
        <div class="col-xs-6 col-sm-3 form-values">
          <span>$ {{formData.price}} {{i18n('usd')}}</span>
        </div>
      </div>

    {{/is}}

    <div class="row text-muted">
      <div class="col-xs-12 col-sm-5 display-row no-padding-left">
        <span>{{i18n('transactionFee')}}
          {{#is formData.fundsType 'EQB'}}
            <span class="icon icon-question"
              data-toggle="popover"
              data-content="{{i18n('helpTransactionFeeEquibit')}}"
              data-placement="right">
            </span>
          {{else}}
            <span class="icon icon-question"
              data-toggle="popover"
              data-content="{{i18n('helpTransactionFeeBitcoin')}}"
              data-placement="right">
            </span>
          {{/is}}
        </span>
      </div>
      <div class="col-xs-6 col-sm-4 form-values no-padding-left">
        <span>
          {{formData.transactionFee}}
          {{#is formData.fundsType 'BTC'}}{{i18n('BTC')}}{{else}}{{i18n('blankEQB')}}{{/is}}
        </span>
      </div>
      <div class="col-xs-6 col-sm-3 form-values">
        <span>$ {{format(formData.transactionFeePrice, '', 2)}} {{i18n('usd')}}</span>
      </div>
    </div>

    <hr/>

    <label for="">From</label>
    <div class="row">
      <div class="col-xs-12 col-sm-5 display-row no-padding-left">
        <span class="input-value"><strong>{{i18n('myPortfolio')}}</strong></span>
      </div>

      {{#is formData.type 'SECURITIES'}}
        <div class="col-xs-12 col-sm-4 form-values no-padding-left">
          <span class="text-danger">- {{formData.amount}} {{i18n('securities')}}</span>
        </div>

      {{else}}
        <div class="col-xs-6 col-sm-4 form-values no-padding">
          <span class="text-danger">- {{format-max(sum(formData.amount, formData.transactionFee), 8)}}
            {{#is formData.fundsType 'BTC'}}{{i18n('BTC')}}{{else}}{{i18n('blankEQB')}}{{/is}}
          </span>
        </div>

        <div class="col-xs-6 col-sm-3 form-values">
          <span class="text-danger">$ - {{format(sum(formData.price, formData.transactionFeePrice), '', 2)}} {{i18n('usd')}}</span>
        </div>
      {{/is}}

      {{#is formData.type 'SECURITIES'}}
      <div class="col-xs-6 col-sm-4 col-sm-offset-5 form-values">
        <span class="text-danger">- {{formData.transactionFee}} {{i18n('blankEQB')}}</span>
      </div>

      <div class="col-xs-6 col-sm-3 form-values">
        <span class="text-danger">$ - {{sum(formData.price, formData.transactionFeePrice)}} {{i18n('usd')}}</span>
      </div>
    {{/is}}
    </div>
  </div>

  <div class="list-group-item">
    <div class="form-group">
      <label for="">{{i18n('description')}}</label>
      <p>{{formData.description}}</p>
    </div>
  </div>
</div>
