<div class="list-group list-group-simple notifications-list">

  {{#each notifications as notification}}
    <a href="{{routeUrl page='transactions' itemId=notification.transactionId}}"
       class="list-group-item {{#if notification.isRead}}read{{/if}}"
       ($click)="read(notification)">
      <div class="media">
        <div class="media-left">
          <span class="media-object icon icon-sell-open"></span>
        </div>
        <div class="media-body">
          <h4 class="media-heading">{{title(notification.type)}}</h4>
          <div class="media-description">for {{for(notification.address)}}</div>
          <div class="media-cta btn-link">
            Amount {{notification.amount}} {{notification.currencyType}}
          </div>
        </div>
      </div>
    </a>

  {{else}}

    <a href="#" class="list-group-item no-link">
      No notifications
    </a>
  {{/each}}

  <!-- Example Alert: Received a Trading Passport -->
  <a href="#" class="list-group-item">
