<html>
  <head>
    <title>{{title}}</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  </head>
  <body>
    <can-import from="~/styles/styles.less" />
    <can-import from="~/app" export-as="viewModel" />

    <can-import from="~/components/page-loading.component" />
    <can-import from="~/components/page-home/" />
    <can-import from="~/components/page-portfolio/" />
    <can-import from="~/components/page-auth/" />
    <can-import from="~/components/page-settings/" />
    <can-import from="~/components/page-four-oh-four/" />

    {{#switch displayedPage}}
			{{#case 'loading'}}
				<page-loading></page-loading>
			{{/case}}
			{{#case 'home'}}
				<page-home />
			{{/case}}
			{{#case 'portfolio'}}
				<page-portfolio />
			{{/case}}
			{{#case 'signup'}}
				<page-auth />
			{{/case}}
      {{#case 'login'}}
				<page-auth />
			{{/case}}
			{{#case 'forgot'}}
				<page-auth />
			{{/case}}
			{{#case 'change-password'}}
				<page-auth />
			{{/case}}
			{{#case 'settings'}}
				<page-settings />
			{{/case}}
			{{#case 'four-oh-four'}}
				<page-four-oh-four />
			{{/case}}
		{{/switch}}

    {{#switch env.NODE_ENV}}
      {{#case "production"}}
        <script src="{{joinBase 'steal.production.js'}}"></script>
      {{/case}}
      {{#default}}
        <script src="/node_modules/steal/steal.js"></script>
      {{/default}}
    {{/switch}}
  </body>
</html>
